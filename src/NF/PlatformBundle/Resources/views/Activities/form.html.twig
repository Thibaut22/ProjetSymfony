<div class="well">
	{{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}

	{{ form_errors(form) }}

	{% if add %}
	<div class="form-group">
		{{ form_label(form.sousCategories, "Sous catégorie de l'activité", {'label_attr': {'class': 'col-sm-3 control-label'}})}}

		{{ form_errors(form.sousCategories)}}
		<div class="col-sm-4">
			{{ form_widget(form.sousCategories, {'attr':{'class':'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.date, "Date de l'activité", {'label_attr': {'class': 'col-sm-3 control-label'}})}}

		{{ form_errors(form.date)}}
		<div class="col-sm-4">
			{{ form_widget(form.date) }}
		</div>
	</div>
	{% endif %}

	<div class="form-group">
		{{ form_label(form.montant, "Montant (si kilométrage, mettre le nombre)", {'label_attr': {'class': 'col-sm-3 control-label'}})}}

		{{ form_errors(form.montant)}}
		<div class="col-sm-4">
			{{ form_widget(form.montant, {'attr':{'class':'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.coment, "Commentaire", {'label_attr': {'class': 'col-sm-3 control-label'}})}}

		{{ form_errors(form.coment)}}
		<div class="col-sm-4">
			{{ form_widget(form.coment, {'attr':{'class':'form-control'}}) }}
		</div>
	</div>
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary ','value':'Valider'}}) }}
    {{ form_end(form) }}
</div>